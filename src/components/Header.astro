<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--background);
	 	position: fixed; 
		width: calc(100% - 2em);
		border-bottom: 1px solid var(--text);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	/* @media (max-width: 720px) {
